@page "/create/program"
@using MistyStep.Models
@using MistyStep.Services
<MudPaper Class="pa-4">
    <MudForm @ref="form" Model="@ExerciseProgram" @bind-IsValid="@success" @bind-Errors="@errors">
        <MudTextField T="string" Label="Exercise Name" Required="true" RequiredError="Exercise name is required!" />
        <div class="d-flex align-center justify-space-between">
            <MudButton OnClick="@(async ()=> await RegisterProgram())" Variant="Variant.Filled" Color="Color.Primary" Disabled="@(!success)" Class="ml-auto">Register</MudButton>
        </div>
    </MudForm>
</MudPaper>
@code {
    bool success;
    string[] errors = { };
    MudForm form;

    [Inject] IExerciseService ExerciseService { get; set; } = null!;
    [Inject] NavigationManager NavigationManager { get; set; } = null!;
    private ExerciseProgram ExerciseProgram { get; set; } = null!;

    private async Task RegisterProgram()
    {
        await ExerciseService.CreateNewExerciseProgram(ExerciseProgram);
        NavigationManager.NavigateTo("/");
    }
}
